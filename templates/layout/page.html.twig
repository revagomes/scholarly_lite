{% if theme.settings.scrolltop_display %}
<div id="toTop"><i class="fa fa-angle-up"></i></div>
{% endif %}

{% if page.header_top_left or page.header_top_right %}
<!-- #header-top -->
<div id="header-top" class="clearfix">
    <div class="container">

        <!-- #header-top-inside -->
        <div id="header-top-inside" class="clearfix">
            <div class="row">

            {% if page.header_top_left %}
            <div class="{{ header_top_left_grid_class }}">
                <!-- #header-top-left -->
                <div id="header-top-left" class="clearfix">
                    <div class="header-top-area">
                      {% block header_top_left %}
                        {{ page.header_top_left }}
                      {% endblock %}
                    </div>
                </div>
                <!-- EOF:#header-top-left -->
            </div>
            {% endif %}

            {% if page.header_top_right %}
            <div class="{{ header_top_right_grid_class }}">
                <!-- #header-top-right -->
                <div id="header-top-right" class="clearfix">
                    <div class="header-top-area">
                      {% block header_top_right  %}
                        {{ page.header_top_right }}
                      {% endblock %}
                    </div>
                </div>
                <!-- EOF:#header-top-right -->
            </div>
            {% endif %}

            </div>
        </div>
        <!-- EOF: #header-top-inside -->

    </div>
</div>
<!-- EOF: #header-top -->
{% endif %}

<!-- #header -->
<header id="header" class="clearfix">
    <div class="container">

        <!-- #header-inside -->
        <div id="header-inside" class="clearfix">
            <div class="row">

                <div class="col-md-4">
                    <!-- #header-inside-left -->
                    <div id="header-inside-left" class="clearfix">

                    {%if logo %}
                    <div id="logo">
                    <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home"> <img src="{{ logo }}" alt="{{ 'Home'|t }}" /> </a>
                    </div>
                    {% endif %}

                    {% if site_name %}
                    <div id="site-name">
                      <a href="{{ front_page }}" title="{{ 'Home'|t }}">{{ site_name }}</a>
                    </div>
                    {% endif %}

                    {% if site_slogan %}
                      <div id="site-slogan">
                        {{ site_slogan }}
                      </div>
                    {% endif %}

                    {% if page.header %}
                      {% block header %}
                        {{ page.header }}
                      {% endblock %}
                    {% endif %}

                    </div>
                    <!-- EOF:#header-inside-left -->
                </div>

                <div class="col-md-8">
                    <!-- #header-inside-right -->
                    <div id="header-inside-right" class="clearfix">

                        <!-- #main-navigation -->
                        <div id="main-navigation" class="clearfix">
                            <nav>
                              {% if page.navigation %}
                                {{ page.navigation }}
                              {% else %}
                                <div id="main-menu">
                                {# @TODO: Convert theme() function to render array on preprocess #}
                                {# <?php print theme('links__system_main_menu', array('links' => $main_menu, 'attributes' => array('class' => array('main-menu', 'menu'), ), 'heading' => array('text' => t('Main menu'), 'level' => 'h2', 'class' => array('element-invisible'), ), )); ?>#}
                                {{ main_menu }}
                                <pre>Here we list main menu links (Fix template: page.html.twig)</pre>
                                </div>
                              {% endif %}
                            </nav>
                        </div>
                        <!-- EOF: #main-navigation -->

                    </div>
                    <!-- EOF:#header-inside-right -->
                </div>

            </div>
        </div>
        <!-- EOF: #header-inside -->

    </div>
</header>
<!-- EOF: #header -->

<!-- # Breadcrumb -->
{% if breadcrumb and theme.settings.breadcrumb_display %}

<div id="page-intro" class="clearfix">
    <div id="page-intro-inside" class="clearfix internal-banner no-internal-banner-image">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div id="breadcrumb" class="clearfix">
                      {% block breadcrumb %}
                        <div id="breadcrumb-inside" class="clearfix">
                          {{ breadcrumb }}
                        </div>
                      {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endif %}
<!-- EOF:#Breadcrumb -->

{% if page.banner %}
<!-- #banner -->
<div id="banner" class="clearfix">
    <div class="container">

        <!-- #banner-inside -->
        <div id="banner-inside" class="clearfix">
            <div class="row">
                <div class="col-md-12">

                <div class="banner-area">
                  {% block banner %}
                    {{ page.banner }}
                  {% endblock %}
                </div>

                </div>
            </div>
        </div>
        <!-- EOF: #banner-inside -->

    </div>
</div>
<!-- EOF:#banner -->
{% endif %}

<!-- #page -->
<div id="page" class="clearfix">

    <!-- #messages-console -->
    {% if messages %}
    <div id="messages-console" class="clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                  {% block messages %}
                    {{ messages }}
                  {% endblock %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    <!-- EOF: #messages-console -->

    {% if page.highlighted %}
    <!-- #highlighted -->
    <div id="highlighted">
        <div class="container">

            <!-- #highlighted-inside -->
            <div id="highlighted-inside" class="clearfix">
                <div class="row">
                    <div class="col-md-12">
                      {% block highlighted %}
                        {{ page.highlighted }}
                      {% endblock %}
                    </div>
                </div>
            </div>
            <!-- EOF:#highlighted-inside -->

        </div>
    </div>
    <!-- EOF: #highlighted -->
    {% endif %}

    <!-- #main-content -->
    <div id="main-content">
        <div class="container">

            <div class="row">

              {% if page.sidebar_first %}
                <aside class="{{ sidebar_first_grid_class }}">
                    <!--#sidebar-->
                    <section id="sidebar-first" class="sidebar clearfix">
                      {% block sidebar_first %}
                        {{ page.sidebar_first }}
                      {% endblock %}
                    </section>
                    <!--EOF:#sidebar-->
                </aside>
              {% endif %}

                <section class="{{ main_grid_class }}">

                    <!-- #promoted -->
                    {% if page.promoted %}
                        <div id="promoted" class="clearfix">
                            <div id="promoted-inside" class="clearfix">
                              {% block promoted %}
                                {{ page.promoted }}
                              {% endblock %}
                            </div>
                        </div>
                    {% endif %}
                    <!-- EOF: #promoted -->

                    <!-- #main -->
                    <div id="main" class="clearfix">

                        {% if title %}
                          {{ title_prefix }}
                            <h1 class="title" id="page-title">
                              {{ title }}
                            </h1>
                          {{ title_suffix }}
                        {% endif %}

                        <!-- #tabs -->
                        {% if tabs %}
                            <div class="tabs">
                              {{ tabs }}
                            </div>
                        {% endif %}
                        <!-- EOF: #tabs -->
                        {# Help #}

                        {% if pege.help %}
                          {% block help %}
                            {{ page.help }}
                          {% endblock %}
                        {% endif %}

                        <!-- #action links -->
                        {% if action_links %}
                          {% block action_links %}
                            <ul class="action-links">
                              {{ action_links }}
                            </ul>
                          {% endblock %}
                        {% endif %}
                        <!-- EOF: #action links -->

                      {% if theme.settings.frontpage_content_print or not drupal_is_front_page %}
                        {# Content #}
                        {% block content %}
                          {{ page.content }}
                          {{ feed_icons }}
                        {% endblock %}
                      {% endif %}

                    </div>
                    <!-- EOF:#main -->

                </section>

              {% if page.sidebar_second %}
                <aside class="{{ sidebar_second_grid_class }}">
                    <!--#sidebar-->
                    <section id="sidebar-second" class="sidebar clearfix">
                      {% block sidebar_second %}
                        {{ page.sidebar_second }}
                      {% endblock %}
                    </section>
                    <!--EOF:#sidebar-->
                </aside>
              {% endif %}

            </div>

        </div>
    </div>
    <!-- EOF:#main-content -->

</div>
<!-- EOF: #page -->

{% if page.bottom_content %}
<!-- #bottom-content -->
<div id="bottom-content" class="clearfix">
    <div class="container">

        <!-- #bottom-content-inside -->
        <div id="bottom-content-inside" class="clearfix">
            <div class="bottom-content-area">
                <div class="row">
                    <div class="col-md-12">
                      {% block bottom_content %}
                        {{ page.bottom_content }}
                      {% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <!-- EOF:#bottom-content-inside -->

    </div>
</div>
<!-- EOF: #bottom-content -->
{% endif %}

{% if page.footer_top_left or page.footer_top_right %}
  <!-- #footer-top -->
  <div id="footer-top" class="clearfix {{ footer_top_regions }}">
      <div class="container">

          <!-- #footer-top-inside -->
          <div id="footer-top-inside" class="clearfix">
              <div class="row">

              {% if page.footer_top_left %}
                <div class="{{ footer_top_left_grid_class }}">

                    <!-- #footer-top-left -->
                    <div id="footer-top-left" class="clearfix">
                      {% block footer_top_left %}
                        <div class="footer-top-area">
                          {{ page.footer_top_left }}
                        </div>
                      {% endblock %}
                    </div>
                    <!-- EOF:#footer-top-left -->

                </div>
              {% endif %}

              {% if page.footer_top_right %}
                <div class="{{ footer_top_right_grid_class }}">

                    <!-- #footer-top-right -->
                    <div id="footer-top-right" class="clearfix">
                      {% block footer_top_right %}
                        <div class="footer-top-area">
                          {{ page.footer_top_right }}
                        </div>
                      {% endblock %}
                    </div>
                    <!-- EOF:#footer-top-right -->

                </div>
              {% endif %}

              </div>
          </div>
          <!-- EOF: #footer-top-inside -->

      </div>
  </div>
  <!-- EOF: #footer-top -->
{% endif %}

{% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
<!-- #footer -->
<footer id="footer" class="clearfix">
  <div class="container">
    <div class="row">
        {% if page.footer_first %}
          <div class="{{ footer_grid_class }}">
            <div class="footer-area">
              {% block footer_first %}
                {{ page.footer_first }}
              {% endblock %}
            </div>
          </div>
        {% endif %}

      {% if page.footer_second %}
        <div class="{{ footer_grid_class }}">
          <div class="footer-area">
            {% block footer_second %}
              {{ page.footer_second }}
            {% endblock %}
          </div>
        </div>
      {% endif %}

      {% if page.footer_third %}
        <div class="{{ footer_grid_class }}">
          <div class="footer-area">
            {% block footer_third %}
              {{ page.footer_third }}
            {% endblock %}
          </div>
        </div>
      {% endif %}

      {% if page.footer_fourth %}
        <div class="{{ footer_grid_class }}">
            <div class="footer-area">
              {% block footer_fourth %}
                {{ page.footer_fourth }}
              {% endblock %}
            </div>
        </div>
      {% endif %}

    </div>
  </div>
</footer>
<!-- EOF #footer -->
{% endif %}

{% if page.sub_footer_left or page.footer %}
    <div id="subfooter" class="clearfix">
      <div class="container">
        <!-- #subfooter-inside -->
        <div id="subfooter-inside" class="clearfix">
          <div class="row">
              <div class="col-md-4">
                {% block sub_footer_left %}
                  <!-- #subfooter-left -->
                  {% if page.sub_footer_left %}
                    <div class="subfooter-area left">
                      {{ page.sub_footer_left }}
                    </div>
                  {% endif %}
                {% endblock %}
                <!-- EOF: #subfooter-left -->
              </div>
              <div class="col-md-8">
                {% block footer %}
                  <!-- #subfooter-right -->
                  {% if page.footer %}
                  <div class="subfooter-area right">
                    {{ page.footer }}
                  </div>
                  {% endif %}

                  {% if theme.settings.credits_display %}
                    <!-- #credits -->
                    <div class="subfooter-area">
                    <div class="block">
                    <p>Scholarly Lite is a free theme, contributed to the Drupal Community by <a href="http://www.morethanthemes.com/&mt-referral=scholarlylite" target="_blank">More than Themes</a>.</p></div></div>
                    <!-- EOF: #credits -->
                  {% endif %}
                {% endblock %}
                <!-- EOF: #subfooter-right -->
              </div>
          </div>
        </div>
        <!-- EOF: #subfooter-inside -->

      </div>
    </div><!-- EOF:#subfooter -->
{% endif %}
